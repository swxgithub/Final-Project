<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:onClick="btnAddmyword"
            app:srcCompat="@android:drawable/ic_menu_upload"/>

        <EditText
            android:id="@+id/inputWord"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:hint="please input words"
            android:inputType="textEmailAddress"
            android:maxLength="70"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/input_login"
            android:textColorHighlight="@color/bg_login"
            android:textColorHint="@color/input_login_hint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSelectHandle="@color/bg_login" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:onClick="btnQuery"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="80dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp" />


        <TextView
            android:id="@+id/psE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Paraphrase"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Interpret"
            android:layout_width="296dp"
            android:layout_height="120dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="107dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="405dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/review"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:onClick="btnReview"
            android:text="Review"
            android:textAllCaps="false"
            android:textSize="10dp"
            android:background="#EEE685"/>

        <Button
            android:id="@+id/query"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Query"
            android:textAllCaps="false"
            android:textColor="#48D1CC"
            android:textSize="10dp"
            android:background="#EEE685"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>