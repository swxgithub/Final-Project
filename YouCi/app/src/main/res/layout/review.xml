<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48D1CC">

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="71dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wordR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp" />

        <TextView
            android:id="@+id/psER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="82dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="105dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="paraphrase"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/InterpretR"
            android:layout_width="295dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:background="@color/white"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="209dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="165dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="Sentences"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sentancesR"
            android:layout_width="296dp"
            android:layout_height="180dp"
            android:background="@color/white"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="112dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="415dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/review"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:onClick="btnReviewR"
            android:text="Review"
            android:textAllCaps="false"
            android:textColor="#48D1CC"
            android:textSize="10dp"
            android:background="#eee685"/>

        <Button
            android:id="@+id/btnQuery"
            android:layout_width="144dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:onClick="btnQueryR"
            android:text="Query"
            android:textAllCaps="false"
            android:textSize="10dp"
            android:background="#eee685"/>
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="77dp"
        android:layout_height="30dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="380dp"
        android:onClick="btnNext"
        android:text="next"
        android:textAllCaps="false"
        android:background="#eee685"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="77dp"
        android:layout_height="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="380dp"
        android:onClick="btnDelete"
        android:text="delete"
        android:textAllCaps="false"
        android:background="#eee685"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>